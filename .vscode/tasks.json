{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "publish",
            "type": "shell",
            "group": "none",
            "windows": {
                "command": "dotnet publish -c release -r win7-x64;"
            },
            "osx": {
                "command": "dotnet publish -c release -r osx.10.11-x64;"
            }
        }
    ]
}